<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.fileexplorer.ui.BreadcrumbBarController"
           styleClass="breadcrumb-bar">

    <padding>
        <Insets top="0" right="10" bottom="0" left="10"/>
    </padding>

    <ScrollPane fx:id="scroll"
                fitToHeight="true"
                fitToWidth="true"
                hbarPolicy="AS_NEEDED"
                vbarPolicy="NEVER"
                pannable="true"
                styleClass="breadcrumb-scroll">

        <content>
            <HBox fx:id="crumbs" spacing="6.0" alignment="CENTER_LEFT" styleClass="breadcrumb-crumbs"/>
        </content>
    </ScrollPane>

</StackPane>
